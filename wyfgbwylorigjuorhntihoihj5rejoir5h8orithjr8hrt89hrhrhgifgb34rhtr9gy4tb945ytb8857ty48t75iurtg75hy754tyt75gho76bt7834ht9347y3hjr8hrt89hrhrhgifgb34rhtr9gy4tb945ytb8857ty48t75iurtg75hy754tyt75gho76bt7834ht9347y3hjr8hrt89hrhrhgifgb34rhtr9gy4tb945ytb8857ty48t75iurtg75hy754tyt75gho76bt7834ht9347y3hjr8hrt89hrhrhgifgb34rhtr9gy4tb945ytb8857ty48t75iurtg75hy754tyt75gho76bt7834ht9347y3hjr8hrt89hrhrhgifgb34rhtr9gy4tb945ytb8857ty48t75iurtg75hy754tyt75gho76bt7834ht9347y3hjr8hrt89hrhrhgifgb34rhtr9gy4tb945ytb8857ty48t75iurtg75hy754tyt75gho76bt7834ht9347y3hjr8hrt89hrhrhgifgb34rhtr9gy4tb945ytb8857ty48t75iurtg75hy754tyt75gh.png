local mouse = players.LocalPlayer:GetMouse()
local angle = 0
local lines = {}

local circle = Drawing.new("Circle")
circle.Visible = false
circle.Thickness = 2
circle.Color = Color3.new(0.345098, 0.156862, 0.701960)
circle.Position = Vector2.new(mouse.X, mouse.Y + game:GetService("GuiService"):GetGuiInset().Y)
circle.Radius = 20

local dot = Drawing.new("Square")
dot.Visible = false
dot.Size = Vector2.new(3,3)
dot.Color = Color3.new(0.345098, 0.156862, 0.701960)
dot.Filled = true

-- create the funny lines
for i=1,4 do
	local line = Drawing.new("Line")
	line.Visible = false
	line.Color = Color3.new(0.345098, 0.156862, 0.701960)
	line.Thickness = 3
	line.Transparency = 1

	lines[i] = line
end

rs.RenderStepped:Connect(function()
	-- custom cursor shit
	if Toggles.customcursor.Value then
		game:GetService("UserInputService").MouseIconEnabled = false
		circle.Position = Vector2.new(mouse.X, mouse.Y + game:GetService("GuiService"):GetGuiInset().Y)
		circle.Visible = true
		dot.Position = Vector2.new(mouse.X - 1, mouse.Y + game:GetService("GuiService"):GetGuiInset().Y - 1)
		dot.Visible = true

		-- the 6 is speed the speed of the rotation
		angle += 1 / (6 * 10)
		local pos = Vector2.new(mouse.X, mouse.Y + game:GetService("GuiService"):GetGuiInset().Y)

		for i,v in pairs(lines) do
			-- taken from https://raw.githubusercontent.com/mvonwalk/spinning_cursor/main/main.lua
			local x = {pos.X + (math.cos(angle + (i * (math.pi / 2))) * (55 + ((55 * math.sin(angle)) / 9))), pos.X + (math.cos(angle + (i * (math.pi / 2))) * ((55 - 20) - (((55 - 20) * math.cos(angle)) / 4)))}
			local y = {pos.Y + (math.sin(angle + (i * (math.pi / 2))) * (55 + ((55 * math.sin(angle)) / 9))), pos.Y + (math.sin(angle + (i * (math.pi / 2))) * ((55 - 20) - (((55 - 20) * math.cos(angle)) / 4)))}

			v.Visible = true
			v.From = Vector2.new(x[2], y[2])
			v.To = Vector2.new(x[1], y[1])
		end
	else
		for i,v in pairs(lines) do
			game:GetService("UserInputService").MouseIconEnabled = true
			v.Visible = false
			dot.Visible = false
			circle.Visible = false
		end
	end
	-- arrest aura
	if Toggles.arrestaura.Value then
		local player = getClosest()
		local distance = (players.LocalPlayer.Character.HumanoidRootPart.Position - player.Character.HumanoidRootPart.Position).Magnitude
		if not player.Character:FindFirstChild("Arrested").Value and distance <= 30 then
			game:GetService("ReplicatedStorage").Assets.Remotes.cuffsArrest:FireServer(player.Character)
		end
	end
end)

